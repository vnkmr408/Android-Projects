<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragments.NoConnectionFragment"
    android:background="#FFF">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/noconnection"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uh-Oh"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:alpha="0.7"
                android:text="Slow or No Internet Connection"
                android:layout_gravity="center"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:alpha="0.7"
                android:text="Please check you internet settings"
                android:layout_gravity="center"
                android:textSize="15dp"/>


            <Button
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/try_again_button_no_connection_fragment"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button1"
                android:text="Try Again" />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
